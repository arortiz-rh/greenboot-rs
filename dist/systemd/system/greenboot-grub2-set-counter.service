[Unit]
Description=Greenboot - set grub2 boot counter in preparation of upgrade
#DefaultDependencies=no
Before=ostree-finalize-staged.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/libexec/greenboot/greenboot set-counter
MountFlags=slave

[Install]
RequiredBy=ostree-finalize-staged.service